@model IEnumerable<EShop.Models.OrderDetails>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 pb-4">
            <h2 class="text-primary display-4">Lista zakupionych produktów</h2>
        </div>
    </div>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nazwa
                </th>
                <th>
                    Marka
                </th>
                <th>
                    Cena (zł)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="5%">@obj.ProductId</td>
                    <td width="22%">@obj.Product.Name</td>
                    <td width="15%">@obj.Product.Brand</td>
                    <td width="20%">@obj.Product.Price zł</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">

                            <a asp-route-Id="@obj.ProductId" asp-action="DetailsProduct" class="btn btn-success mx-2">
                                <i class="fas fa-list-ul"></i>
                            </a>

                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div>
        <h2>Brak zakupionych produktów</h2>
    </div>
}

