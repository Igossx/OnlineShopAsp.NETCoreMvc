@using EShop.Models
@model List<Product>
    <!--Section: Block Content-->
    <section class="p-5">

        <!--Grid row-->
        <div class="row">

            <!--Grid column-->
            <div class="col-lg-8">

                <!-- Card -->
                <div class="card wish-list mb-3">
                    <div class="card-body">

                        <h5 class="mb-4">Mój koszyk</h5>

                        @if (Model.Count() > 0)
                        {

                            @foreach (var obj in Model)
                            {
                                <div class="row mb-4">
                                    <div class="col-md-5 col-lg-3 col-xl-3">
                                        <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                            <img class="img-fluid w-100"
                                                 src="@obj.CoverImageUrl">
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-lg-9 col-xl-9">
                                        <div>
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5>@obj.Name</h5>
                                                    <p class="mb-3 text-muted text-uppercase small">@obj.Description</p>
                                                    <p class="mb-2 text-muted text-uppercase small">Kategoria: @obj.Category.CategoryName</p>
                                                    <p class="mb-3 text-muted text-uppercase small">Marka: @obj.Brand</p>
                                                </div>
                                                <div>
                                                    <div class="def-number-input number-input safari_only mb-0 w-100">
                                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()"
                                                                class="minus"></button>
                                                        <input class="quantity" min="0" name="quantity" value="1" type="number">
                                                        <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()"
                                                                class="plus"></button>
                                                    </div>
                                                    <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                                        (Minimum, 1 sztuka)
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <a asp-action="Remove" asp-controller="Home" asp-route-id="@obj.Id" class="card-link-secondary small text-uppercase mr-3">
                                                        <i class="fas fa-trash-alt mr-1"></i> Usuń przedmiot
                                                    </a>

                                                </div>
                                                <p class="mb-0"><span><strong>@obj.Price zł</strong></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div>

                                <h2>Brak produktów</h2>

                            </div>
                        }

                        <p class="text-primary mt-4 mb-0">
                            <i class="fas fa-info-circle mr-1"></i> Nie zwlekaj z zakupem, dodanie
                            przedmiotu do koszyka nie oznacza jego zarezerwowania.
                        </p>

                    </div>
                </div>
                <!-- Card -->
                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <h5 class="mb-4">Szacowany czas dostawy</h5>

                        <p class="mb-0">
                            @DateTime.Now.AddDays(3).ToString("d") r. - @DateTime.Now.AddDays(6).ToString("d") r.
                        </p>
                    </div>
                </div>
                <!-- Card -->
                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <h5 class="mb-4">Akceptowane formy płatności</h5>

                        <img class="mr-2" width="45px"
                             src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                             alt="Visa">
                        <img class="mr-2" width="45px"
                             src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                             alt="Mastercard">
                        <img class="mr-2" width="45px"
                             src="~/imagesHelper/paypal-g5269b727e_1280.png"
                             alt="PayPal acceptance mark">
                    </div>
                </div>
                <!-- Card -->

            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-lg-4">

                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <h5 class="mb-3">Podsumowanie zamówienia</h5>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Kwota za zakupy
                                <span>@Model.Sum(c => c.Price) zł </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Dostawa
                                <span>Gratis!</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Całkowita wartość zamówienia</strong>
                                    <strong>
                                        <p class="mb-0">(z VAT)</p>
                                    </strong>
                                </div>
                                <span><strong>@Model.Sum(c => c.Price) zł </strong></span>
                            </li>
                        </ul>

                        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-primary btn-block waves-effect waves-light">Przejdź do płatności</a>

                    </div>
                </div>
                <!-- Card -->
                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
                           aria-expanded="false" aria-controls="collapseExample1">
                            Kod promocyjny (opcjonalnie)
                            <span><i class="fas fa-chevron-down pt-1"></i></span>
                        </a>

                        <div class="collapse" id="collapseExample1">
                            <div class="mt-3">
                                <div class="md-form md-outline mb-0">
                                    <input type="text" id="discount-code1" class="form-control font-weight-light"
                                           placeholder="Wpisz kod promocyjny">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card -->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->

    </section>
    <!--Section: Block Content-->
