<form method="post" asp-action="Create" id="role-form" enctype="multipart/form-data">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Dodaj Role</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <h3 class="text-danger">@ViewBag.mgs</h3>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Nazwa</label>
                    </div>
                    <div class="col-8">
                        <input id="name" name="name" class="form-control" />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Dodaj" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Wróć</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#role-form").validate({
                rules: {
                    name: {
                        required: true,
                    },
                },
                messages: {
                    name: "Nazwa nie może być pusta",
                }

            });
        });</script>
}

