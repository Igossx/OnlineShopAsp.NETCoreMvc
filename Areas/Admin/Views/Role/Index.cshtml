<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 pb-4">
            <h2 class="text-primary display-4">Role</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Role" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Dodaj nową rolę
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th>
                Nazwa
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in ViewBag.Roles)
        {
            <tr>
                <td width="50%">@obj.Name</td>

                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Role" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-warning mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="Role" asp-route-Id="@obj.Id" asp-action="Assign" class="btn btn-success mx-2">
                            <i class="fas fa-user-tag"></i>
                        </a>
                        <a asp-controller="Role" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.success(del);
            }
            var aign = '@TempData["assign"]'
            if (aign!='') {
                alertify.success(aign);
            }
            var act = '@TempData["active"]'
            if (act!='') {
                alertify.success(act);
            }
        })

        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        });
    </script>
}

