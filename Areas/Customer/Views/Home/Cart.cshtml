@using EShop.Models
@model List<Product>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6 pb-4">
                <h2 class="text-primary display-4">Lista produktów</h2>
            </div>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%" id="myTable">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Nazwa produktu
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Remove" asp-controller="Home" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="row">
            <div class="col-6">
                <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
            </div>
            <div class="col-6 text-right">
                <h3>Total Amount</h3>
                <h3>Grant Total : @Model.Sum(c => c.Price) </h3>
                <a class="btn btn-info">Process to Checkout</a>
            </div>
        </div>
    }
    else
    {
        <div>
            <h2>Brak produktów</h2>
        </div>
    }

